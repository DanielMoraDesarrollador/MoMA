<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg1"
    tools:context=".view.FragmentDetalleObra">

    <ImageView
        android:id="@+id/imagen_obra_grande"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:elevation="8dp"
        android:scaleType="centerInside"
        tools:src="@drawable/imagenfondo" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:alpha="0.8"
        android:background="@color/blanco1"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                style="@style/tituloDetalle"
                android:text="Nombre: " />

            <TextView
                android:id="@+id/nombre_obra"
                style="@style/contenidoDetalle"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="nombre_obra" />

            <TextView
                style="@style/tituloDetalle"
                android:text="Artista: " />

            <TextView
                android:id="@+id/nombre_artista"
                style="@style/contenidoDetalle"
                tools:text="nombre_artista" />

            <TextView
                style="@style/tituloDetalle"
                android:text="Nacionalidad: " />

            <TextView
                android:id="@+id/nacionalidad"
                style="@style/contenidoDetalle"
                tools:text="nacionalidad" />

            <TextView
                style="@style/tituloDetalle"
                android:text="Influenciado por: " />

            <TextView
                android:id="@+id/influenciado_por"
                style="@style/contenidoDetalle"
                tools:text="influenciado_por" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>