<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/momaback"
    android:orientation="vertical"
    tools:context=".view.ActivityLogin">


    <ImageView
        android:id="@+id/foto_perfil_usuario_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_margin="40dp" />

    <EditText
        android:id="@+id/edit_text_email"
        style="@style/botonesLogin"
        android:hint="e-mail" />

    <EditText
        android:id="@+id/edit_text_pass"
        style="@style/botonesLogin"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/boton_crear_usuario"
        style="@style/botonesLogin"
        android:text="Crear Cuenta" />

    <Button
        android:id="@+id/boton_login_usuario"
        style="@style/botonesLogin"
        android:text="Login" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp" />

</LinearLayout>